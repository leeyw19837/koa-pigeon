{
  "name": "pigeon",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "concurrently 'tsc --watch' 'nodemon --watch \"dist\" --watch \"schemas\" --ext js,ts,gql dist/index.js'",
    "lint": "tslint 'src/**/*.ts'",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iHealthLab/pigeon.git"
  },
  "bugs": {
    "url": "https://github.com/iHealthLab/pigeon/issues"
  },
  "homepage": "https://github.com/iHealthLab/pigeon#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "dependencies": {
    "fresh-id": "^1.1.0",
    "graphql": "^0.9.1",
    "graphql-subscriptions": "^0.3.0",
    "graphql-tools": "^0.10.1",
    "koa": "^2.2.0",
    "koa-convert": "^1.2.0",
    "koa-graphql": "^0.6.2",
    "koa-mount": "^2.0.0",
    "koa-router": "7",
    "lodash.get": "^4.4.2",
    "moment": "^2.17.1",
    "mongodb": "^2.2.24",
    "typescript": "^2.2.1"
  },
  "devDependencies": {
    "@types/graphql": "^0.8.6",
    "@types/graphql-date": "^1.0.0",
    "@types/koa": "^2.0.39",
    "@types/koa-router": "^7.0.21",
    "@types/lodash": "^4.14.55",
    "@types/lodash.get": "^4.4.1",
    "@types/mongodb": "^2.1.41",
    "concurrently": "^3.4.0",
    "nodemon": "^1.11.0",
    "tslint": "^4.5.1"
  }
}
