{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es3",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": [
      "es2017"
    ]
  }
}